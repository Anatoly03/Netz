{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Template",
	"patterns": [
		{
			"include": "#symbols"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#stdlib"
		},
		{
			"include": "#strings"
		},
        {
			"include": "#comments"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"symbols": {
			"patterns": [{
				"name": "keyword.control.tmpl",
				"match": "\\b(requires|if|then|else|foreach)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.operator",
				"match": ":"
			}]
		},
        "stdlib": {
			"patterns": [{
				"name": "support.function",
				"match": "\\b(indent|outdent|require_newline)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.tmpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tmpl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
                "name": "comment.block.documentation",
                "begin": "/\\*",
                "end": "*/"
			}, {
                "name": "comment.line.double-slash",
                "begin": "//",
                "end": "\n"
			}]
		},
        "variables": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*\\b"
			}]
		}
	},
	"scopeName": "source.tmpl"
}